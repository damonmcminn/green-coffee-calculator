doctype html

html

  head
    title Green Coffee Calculator
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/pure/0.5.0/pure-min.css')
    link(rel='stylesheet', href='style.css')

  body
    
    #calculator
      form.pure-form.pure-form-stacked
        fieldset
          legend Green Coffee Calculator
          div.pure-control-group
            label(for='loss') Weight Loss %
            input(
              type='number',
              step=0.1,
              name='loss',
              id='loss',
              value=15).pure-input-1-1
          div.pure-control-group
            label(for='roasted') Roasted Weight
            input(
              type='number',
              step=0.001,
              name='roasted',
              id='roasted',
              placeholder='kg').pure-input-1-1
          div.pure-control-group
            label(for='green') Green Weight
            input(
              name='green',
              id='green',
              value='Calculate!',
              disabled=true).pure-input-1-1
          div.pure-controls
            button#calc.pure-button.pure-button-primary(type='button') Calculate
      
    script(type='text/javascript', src='green.js')
